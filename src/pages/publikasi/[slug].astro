---
import Layout from "../../layouts/Layout.astro";
import type { SanityDocument } from "@sanity/client";
import { sanityClient } from "sanity:client";
import imageUrlBuilder from "@sanity/image-url";
import type { SanityImageSource } from "@sanity/image-url/lib/types/types";
import PortableText from "../../components/PortableText.astro";

const POST_QUERY = `*[_type == "post" && slug.current == $slug][0]`;
const post = await sanityClient.fetch<SanityDocument>(POST_QUERY, Astro.params);

export async function getStaticPaths(): Promise<{ params: { slug: string } }> {
  const SLUGS_QUERY = `*[_type == "post" && defined(slug.current)]{
    "params": {"slug": slug.current}
  }`;
  return await sanityClient.fetch(SLUGS_QUERY, Astro.params);
}

const { projectId, dataset } = sanityClient.config();
const urlFor = (source: SanityImageSource) =>
  projectId && dataset
    ? imageUrlBuilder({ projectId, dataset }).image(source)
    : null;
const postImageUrl = post.mainImage
  ? urlFor(post.mainImage)?.width(550).height(310).url()
  : null;
---
<Layout>
<main class="container mx-auto min-h-screen max-w-3xl p-8 flex flex-col gap-4">
  {
    postImageUrl && (
      <img
        src={postImageUrl}
        alt={post.title}
        class="aspect-video rounded-xl"
        width="700"
        height="500"
      />
    )
  }
  <div class="text-center items-center content-center">
    <h1 class="text-4xl font-bold mb-8">{post.title}</h1>
    <p class="p-5">Diterbitkan: {new Date(post.publishedAt).toLocaleDateString()}</p>
  </div>
  <div class="prose">
    {Array.isArray(post.body) && <PortableText portableText={post.body} />}
  </div>
  <div class="p-3.5">
    <a href="/publikasi" class="hover:underline">&larr; Kembali ke Publikasi</a>
  </div>
</main>
</Layout>